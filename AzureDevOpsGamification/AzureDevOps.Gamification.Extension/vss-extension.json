{
  "manifestVersion": 1,
  "id": "azuredevops-gamification",
  "name": "Azure DevOps Gamification",
  "version": "1.0.0",
  "publisher": "your-publisher-id",
  "description": "Plugin de gamificação para Azure DevOps com CodeGraph e rankings de desenvolvedores",
  "categories": ["Azure Boards", "Azure Repos"],
  "tags": ["gamification", "metrics", "ranking"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "images/logo.png"
  },
  "scopes": [
    "vso.code",
    "vso.build",
    "vso.project"
  ],
  "contributions": [
    {
      "id": "gamification-widget",
      "type": "ms.vss-dashboards-web.widget",
      "description": "Widget de gamificação para dashboard",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog"
      ],
      "properties": {
        "name": "Developer Ranking",
        "description": "Top 10 desenvolvedores e métricas de commits",
        "uri": "widget.html",
        "previewImageUrl": "images/widget-preview.png",
        "supportedSizes": [
          {
            "rowSpan": 2,
            "columnSpan": 3
          }
        ],
        "supportedScopes": ["project_team"]
      }
    },
    {
      "id": "gamification-hub",
      "type": "ms.vss-web.hub",
      "description": "Hub principal de análise de gamificação",
      "targets": [
        "ms.vss-web.project-hub-groups-collection"
      ],
      "properties": {
        "name": "Gamification",
        "order": 100,
        "uri": "hub.html"
      }
    }
  ],
  "contributionTypes": [],
  "files": [
    {
      "path": "widget.html",
      "addressable": true
    },
    {
      "path": "hub.html", 
      "addressable": true
    },
    {
      "path": "js",
      "addressable": true
    },
    {
      "path": "css",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ]
}